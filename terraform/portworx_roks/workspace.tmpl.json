{
  "name": "{{ WORKSPACE_NAME }}",
  "type": [
    "terraform_v0.12"
  ],
  "description": "IBM Cloud Schematics Workspace to deploy an OpenShift cluster sandbox for Cloud Pak for Data v3.0 on IBM Cloud Classic",
  "tags": [
    "owner:{{ OWNER }}",
    "env:{{ ENV }}",
    "project:{{ PROJECT }}"
  ],
  "resource_group": "schematics",
  "template_repo": {
    "url": "https://github.com/ibm-hcbt/cloud-pak-sandboxes",
    "branch": "{{ BRANCH }}"
  },
  "template_data": [
    {
      "folder": "terraform/portworx_roks",
      "type": "terraform_v0.12",
      "variablestore": [
        {
          "name": "region",
          "value": "us-south",
          "type": "string"
        },
        {
          "name": "project_name",
          "value": "{{ PROJECT }}",
          "type": "string"
        },
        {
          "name": "owner",
          "value": "{{ OWNER }}",
          "type": "string"
        },
        {
          "name": "infra",
          "value": "{{ INFRA }}",
          "type": "string"
        },
        {
          "name": "environment",
          "value": "{{ ENV }}",
          "type": "string"
        },
        {
          "name": "resource_group",
          "value": "cloud-pak-sandbox-ibm",
          "type": "string"
        },
        {
          "name": "cluster_id",
          "value": "{{ CLUSTER_ID }}",
          "type": "string"
        },
        {
          "name": "datacenter",
          "value": "dal10",
          "type": "string"
        },
        {
          "name": "vpc_zone_names",
          "value": ["us-south-1"],
          "type": "list"
        },
        {
          "name": "private_vlan_number",
          "value": "",
          "type": "string"
        },
        {
          "name": "public_vlan_number",
          "value": "",
          "type": "string"
        }
      ]
    }
  ]
}