{
  "name": "{{ WORKSPACE_NAME }}",
  "type": [
    "terraform_v0.12"
  ],
  "description": "IBM Cloud Schematics Workspace to deploy an OpenShift cluster sandbox with Portworx on IBM Cloud Classic or Gen2 VPC",
  "tags": [
    "owner:{{ OWNER }}",
    "env:{{ ENV }}",
    "project:{{ PROJECT }}"
  ],
  "resource_group": "schematics",
  "template_repo": {
    "url": "https://github.com/ibm-hcbt/cloud-pak-sandboxes",
    "branch": "{{ BRANCH }}"
  },
  "template_data": [
    {
      "folder": "terraform/portworx_roks",
      "type": "terraform_v0.12",
      "variablestore": [
        {
          "name": "region",
          "value": "us-south",
          "type": "string"
        },
        {
          "name": "ibmcloud_api_key",
          "value": "{{ IBMCLOUD_API_KEY }}",
          "type": "string"
        },
        {
          "name": "project_name",
          "value": "{{ PROJECT }}",
          "type": "string"
        },
        {
          "name": "owner",
          "value": "{{ OWNER }}",
          "type": "string"
        },
        {
          "name": "environment",
          "value": "{{ ENV }}",
          "type": "string"
        },
        {
          "name": "resource_group",
          "value": "cloud-pak-sandbox",
          "type": "string"
        },
        {
          "name": "cluster_id",
          "value": "{{ CLUSTER_ID }}",
          "type": "string"
        },
        {
          "name": "datacenter",
          "value": "dal10",
          "type": "string"
        },
        {
          "name": "vpc_zone_names",
          "value": ["us-south-1"],
          "type": "list"
        },
        {
          "name": "private_vlan_number",
          "value": "",
          "type": "string"
        },
        {
          "name": "public_vlan_number",
          "value": "",
          "type": "string"
        },
        {
          "name": "install_storage",
          "value": true,
          "type": "bool"
        },
        {
          "name": "storage_capacity",
          "value": 200,
          "type": "number"
        },
        {
          "name": "storage_iops",
          "value": 10,
          "type": "number"
        },
        {
          "name": "storage_profile",
          "value": "10iops-tier",
          "type": "string"
        },
        {
          "name": "unique_id",
          "value": "{{ UNIQUE_PX_NAME }}",
          "type": "string"
        },
        {
          "name": "create_external_etcd",
          "value": "{{ CREATE_EXTERNAL_ETCD }}",
          "type": "bool"
        },
        {
          "name": "etcd_username",
          "value": "{{ ETCD_USERNAME }}",
          "type": "string"
        },
        {
          "name": "etcd_password",
          "value": "{{ ETCD_PASSWORD }}",
          "type": "string"
        },
        {
          "name": "etcd_secret_name",
          "value": "px-etcd-certs",
          "type": "string"
        }
      ]
    }
  ]
}